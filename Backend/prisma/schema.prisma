generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  domain    String    @unique
  createdAt DateTime  @default(now())

  users     User[]
  projects  Project[]
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String   
  tenantId  Int
  tenant    Tenant    @relation(fields: [tenantId], references: [id])
  createdAt DateTime  @default(now())

  projects Project[]
}



model Project {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  status      String   // e.g., "Active", "Completed"
  deadline    DateTime
  tenantId    Int
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Users       User[]
}